---
import Layout from "../../layouts/Layout.astro";
import AuthModal from "../../components/AuthModal.jsx";
const redirect = Astro.url.searchParams.get("redirect") || "/";
---

<Layout title="Sign In - Stress-Free Holiday Makers">
  <section
    class="py-20 px-6 min-h-screen bg-gradient-to-b from-sky to-white flex items-center justify-center"
  >
    <div class="max-w-md w-full">
      <div class="bg-white rounded-3xl shadow-lg p-8">
        <div class="text-center mb-8">
          <div
            class="w-16 h-16 bg-gradient-to-br from-teal to-coral rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <span class="text-white text-3xl">✈️</span>
          </div>
          <h1 class="text-3xl font-serif text-ocean mb-2">Welcome Back</h1>
          <p class="text-ocean/70">
            Sign in to your account to continue planning
          </p>
        </div>

        <AuthModal
          client:load
          isOpen={true}
          onClose={() => (window.location.href = "/")}
          initialMode="login"
          redirectTo={redirect}
        />
      </div>
    </div>
  </section>
</Layout>
