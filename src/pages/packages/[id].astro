              <p class="text-ocean/70">English, Swahili</p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="text-center bg-white rounded-3xl shadow-lg p-12">
        <h2 class="text-3xl font-serif text-ocean mb-4">
          Ready to Book Your Adventure?
        </h2>
        <p class="text-ocean/70 mb-8 max-w-2xl mx-auto">
          Secure your spot on this amazing journey. Our stress-free booking
          process ensures everything is taken care of.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`/packages/${pkg.id}/book`}
            class="px-8 py-4 bg-teal text-white rounded-xl hover:bg-teal/90 transition-colors font-medium"
          >
            Book Now - ${pkg.price}
          </a>
          <a
            href="/contact"
            class="px-8 py-4 bg-sand text-ocean rounded-xl hover:bg-sand/80 transition-colors font-medium"
          >
            Ask Questions
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
