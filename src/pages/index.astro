---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Process from '../components/Process.astro';
import Destinations from '../components/Destinations.astro';
import Testimonials from '../components/Testimonials.astro';
import CTA from '../components/CTA.astro';
---
<Layout title="Stress-Free Holiday Makers">
  <div class="relative">
    <Hero />
    <Process />
  </div>
  <Destinations />
  <Testimonials />
  <CTA />

  <footer class="py-12 px-6 text-center bg-gradient-to-br from-sky to-sand">
    <div class="flex justify-center mb-4">
      <div class="w-12 h-12 bg-gradient-to-br from-teal to-coral rounded-full flex items-center justify-center">
        <span class="text-white text-2xl">✈️</span>
      </div>
    </div>
    <p class="text-lg font-serif text-ocean mb-2">
      <span class="font-bold">Stress-Free</span> <span class="text-teal">Holiday Makers</span>
    </p>
    <p class="text-sm text-ocean/70 mb-4">✨ Plan once. Relax forever. ✨</p>
    <p class="text-sm text-ocean/70">© 2025 Stress-Free Holiday Makers. All rights reserved.</p>
    <p class="mt-3">
      <a href="/Destinations" class="text-teal hover:text-coral transition-colors mx-2 font-medium">Destinations</a> |
      <a href="/Planner" class="text-teal hover:text-coral transition-colors mx-2 font-medium">Planner</a> |
      <a href="/About" class="text-teal hover:text-coral transition-colors mx-2 font-medium">About</a>
    </p>
  </footer>
</Layout>