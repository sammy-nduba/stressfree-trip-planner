---

<section class="py-20 bg-gradient-to-b from-[#E0F7FA]/20 to-white relative -mt-32 pt-40">
	<div class="max-w-7xl mx-auto px-6">
		<div class="grid md:grid-cols-3 gap-8">
			{steps.map((step) => (
				<div class="bg-white rounded-2xl p-10 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
					<div class="text-[#006064] mb-6" set:html={step.icon}></div>
					<h3 class="text-2xl font-playfair text-[#006064] mb-4 leading-tight">
						{step.title}
					</h3>
					<p class="text-[#006064]/70 leading-relaxed text-sm">
						{step.description}
					</p>
				</div>
			))}
		</div>
	</div>
</section>
