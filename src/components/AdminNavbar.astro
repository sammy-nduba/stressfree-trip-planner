---
// src/components/AdminNavbar.astro
// Admin-specific navbar with logout functionality
const { user } = Astro.locals;
---

<nav class="bg-[#006064] text-white shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo/Brand -->
            <a href="/admin" class="flex items-center gap-3 group">
                <img
                    src="/logo.png"
                    alt="Stress-Free Holiday Makers Admin"
                    class="w-12 h-12 object-contain group-hover:scale-110 transition-transform"
                />
                <div class="flex flex-col">
                    <span class="text-xl font-bold">Admin Dashboard</span>
                    <span class="text-xs text-white/70"
                        >Stress-Free Holiday Makers</span
                    >
                </div>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-6">
                <a
                    href="/admin"
                    class="text-white/90 hover:text-white transition-colors font-medium"
                >
                    Dashboard
                </a>
                <a
                    href="/admin/packages"
                    class="text-white/90 hover:text-white transition-colors font-medium"
                >
                    Packages
                </a>
                <a
                    href="/admin/trip-requests"
                    class="text-white/90 hover:text-white transition-colors font-medium"
                >
                    Trip Requests
                </a>

                <div
                    class="flex items-center gap-4 ml-4 pl-4 border-l border-white/20"
                >
                    <span class="text-white/80 text-sm">
                        {user?.email}
                    </span>
                    <form action="/api/auth/logout" method="POST">
                        <button
                            type="submit"
                            class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors text-sm font-medium"
                        >
                            Logout
                        </button>
                    </form>
                </div>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="admin-mobile-menu-button"
                class="md:hidden text-white"
                aria-label="Toggle menu"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div
            id="admin-mobile-menu"
            class="hidden md:hidden mt-4 pb-4 space-y-3"
        >
            <a
                href="/admin"
                class="block text-white/90 hover:text-white transition-colors font-medium py-2"
            >
                Dashboard
            </a>
            <a
                href="/admin/packages"
                class="block text-white/90 hover:text-white transition-colors font-medium py-2"
            >
                Packages
            </a>
            <a
                href="/admin/trip-requests"
                class="block text-white/90 hover:text-white transition-colors font-medium py-2"
            >
                Trip Requests
            </a>

            <div class="pt-4 border-t border-white/20">
                <p class="text-white/80 text-sm mb-2">{user?.email}</p>
                <form action="/api/auth/logout" method="POST">
                    <button
                        type="submit"
                        class="w-full px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors text-sm font-medium"
                    >
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </div>
</nav>

<script>
    // Mobile menu toggle
    document.addEventListener("DOMContentLoaded", () => {
        const menuButton = document.getElementById("admin-mobile-menu-button");
        const mobileMenu = document.getElementById("admin-mobile-menu");

        menuButton?.addEventListener("click", () => {
            mobileMenu?.classList.toggle("hidden");
        });
    });
</script>
